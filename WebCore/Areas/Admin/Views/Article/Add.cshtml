
@{
    var listcat = ViewBag.Categories;
}
@{
      ViewBag.Menu = "Article";
}
<section class="content-header">
    <h1>
        Thêm mới bài viết

    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Bài viết</li>
    </ol>
</section>
<section class="content">

    <div class="row">
        <form role="form" method="post" action="/Admin/Article/Add">
            <div class="col-xs-3">
                <div class="box box-primary">
                    <div class="box-body">
                        <div class="form-group">
                            <img id="imageurl" style="width: 100%;min-height: 150px;" />
                        </div>
                        <div class="form-group">
                            <label for="image">Ảnh đại diện</label>
                            <input type="file" id="UploadImage" accept="image/*">
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-xs-9">
                <div class="box box-primary">

                    <div class="box-body">
                        <input type="hidden" class="form-control" id="Image">
                        <div class="form-group">
                            <label for="name">Tiêu đề</label>
                            <input type="text" class="form-control" id="Name" required placeholder="Tiêu ">
                        </div>

                        <div class="form-group">
                            <label for="Decsription">Mô tả</label>
                            <textarea type="text" class="form-control" id="Decsription" placeholder="Mô tả"></textarea>
                        </div>

                        <div class="form-group">
                            <label for="Content">Nội dung</label>
                            <textarea class="form-group" id="Content" name="Content" rows="10" cols="80">
                                           
                                 </textarea>
                           @* <input type="text" class="form-control" id="Content" placeholder="Content">*@
                        </div>

                        <div class="form-group">
                            <label for="SeoUrl">SeoUrl</label>
                            <input type="text" class="form-control" id="SeoUrl" placeholder="SeoUrl">
                        </div>

                        <div class="form-group">d
                            <label for="KeyWords">Keywords</label>
                            <input type="text" class="form-control" id="Keywords" placeholder="Keywords">
                        </div>

                        <div class="form-group">
                            <label for="ArticleCategoryId">Danh mục </label>
                            <select name="ArticleCategoryId" id="ArticleCategoryId" class="form-control">
                                @foreach (var item in listcat)
                                {
                                    <option value="@item.Id" >@item.Name</option>
                                }

                              
                            </select>
                      
                        </div>

                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="Published"> Xuất bản
                            </label>
                        </div>
                    </div>
                    <!-- /.box-body -->



                </div>
                <!-- /.box -->
            </div>
            <div class="col-xs-12" style=" text-align: center; ">
                <button type="submit" id="btn-Save" class="btn btn-primary">Lưu</button>
            </div>
        </form>
    </div>

</section>
<script src="~/bower_components/ckeditor/ckeditor.js"></script>
<script src="~/bower_components/ckeditor/config.js"></script>
<script>
   
    $(document).ready(function () {

        tinymce.init({
            selector: 'textarea#Content',
            plugins: 'image code media',
            toolbar:
                [
                    { name: 'history', items: ['undo', 'redo'] },
                    { name: 'styles', items: ['styles'] },
                    { name: 'formatting', items: ['bold', 'italic', 'link', 'image', 'media'] },
                    { name: 'alignment', items: ['alignleft', 'aligncenter', 'alignright', 'alignjustify'] },
                    { name: 'indentation', items: ['outdent', 'indent', 'code'] }
                ],
            image_title: true,
            automatic_uploads: true,
            file_picker_types: 'image',
            images_upload_url: '/Admin/File/UploadV2',
            relative_urls: false,
            remove_script_host: true,
            file_picker_callback: function (cb, value, meta) {
                var input = document.createElement('input');
                input.setAttribute('type', 'file');
                input.setAttribute('accept', 'image/*');
                input.onchange = function () {
                    var file = this.files[0];
                    var formData = new FormData();
                    formData.append('File', file);
                    $.ajax({
                        url: '/Admin/File/Upload',
                        type: 'POST',
                        data: formData,
                        processData: false,
                        contentType: false,
                        success: function (data) {
                            if (data.statusCode == 1) {
                                cb(data.url, { alt: file.name });
                            }
                        }
                    });
                };
                input.click();
            },
        });
        $("#UploadImage").change(function () {

            var formData = new FormData();
            formData.append('File', $('#UploadImage')[0].files[0]);

            $.ajax({
                url: '/Admin/File/Upload',
                type: 'POST',
                data: formData,
                processData: false,  // tell jQuery not to process the data
                contentType: false,  // tell jQuery not to set contentType
                success: function (data) {
                    if (data.statusCode == 1) {
                        $("#Image").val(data.url);
                        $("#imageurl").attr("src", data.url);

                    }
                }
            });
        })
        $("form").submit(function (event) {
            event.preventDefault();
            debugger
            var formData = {
                Name: $("#Name").val(),
                Decsription: $("#Decsription").val(),
                Content: tinymce.get("Content").getContent(),
                SeoUrl: $("#SeoUrl").val(),
                Keywords: $("#Keywords").val(),
                Published: $("#Published").is(":checked"),
                Image: $("#Image").val(),
                ArticleCategoryId:$('#ArticleCategoryId').find(":selected").val()
            };
            debugger
            $.ajax({
                type: "POST",
                url: "/Admin/Article/Add",
                data: formData,
                dataType: "json",
                encode: true,
            }).done(function (data) {
                alert(data.message);
                 if(data.status>0)
               location.href="/Admin/Article/Index";
            });

           
        });
    });
</script>