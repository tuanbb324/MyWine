@using WebCore.Domain.Catalog;
@model Articles
@{
    var listcat = ViewBag.Categories;
}
@{
      ViewBag.Menu = "Article";
}
<section class="content-header">
    <h1>
        Chỉnh  bài viết

    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Bài viết</li>
    </ol>
</section>
<section class="content">

    <div class="row">
        <form role="form" action="/Admin/Article/Edit">
            <div class="col-xs-3">
                <div class="box box-primary">
                    <div class="box-body">
                        <div class="form-group">
                            <img id="imageurl" style="width: 100%;min-height: 150px;" src="@Model.Image" />
                        </div>
                        <div class="form-group">
                            <label for="image">Ảnh đại diện</label>
                            <input type="file" id="UploadImage" accept="image/*" value="">
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-xs-9">
                <div class="box box-primary">

                    <div class="box-body">
                        <input type="hidden" class="form-control" value="@Model.Id" id="Id">
                        <input type="hidden" class="form-control" value="@Model.Image" id="Image">
                        <div class="form-group">
                            <label for="name">Tên đề</label>
                            <input type="text" class="form-control" id="Name" required placeholder="Tiêu đề" value="@Model.Name">
                        </div>

                        <div class="form-group">
                            <label for="Decsription">Mô tả</label>
                            <textarea type="text" class="form-control" id="Decsription" placeholder="Mô tả">@Model.Decsription</textarea>
                        </div>

                        <div class="form-group">
                            <label for="Content">Nội dung</label>
                            <textarea class="form-group" id="Content" name="Content" rows="10" cols="80">
                                          @Model.Content 
                                 </textarea>
                        </div>

                        <div class="form-group">
                            <label for="SeoUrl">SeoUrl</label>
                            <input type="text" class="form-control" id="SeoUrl" placeholder="SeoUrl" value="@Model.SeoUrl">
                        </div>

                        <div class="form-group">
                            <label for="KeyWords">Keywords</label>
                            <input type="text" class="form-control" id="Keywords" placeholder="Keywords" value="@Model.Keywords" >
                        </div>

                        <div class="form-group">
                            <label for="ArticleCategoryId">Danh mục </label>
                            <select name="ArticleCategoryId" id="ArticleCategoryId" class="form-control">
                                @foreach (var item in listcat)
                                {
                                    if (Model.ArticleCategoryId == item.Id)
                                    {
                                        <option value="@item.Id" selected>@item.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }

                                }


                            </select>
                        </div>

                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="Published" @(Model.Published ? "checked" : "") > Xuất bản
                            </label>
                        </div>
                        <!-- /.box-body -->



                    </div>
                    <!-- /.box -->
                </div>
                <div class="col-xs-12" style=" text-align: center; ">
                    <button type="submit" id="btn-Save" class="btn btn-primary">Lưu</button>
                </div>
        </form>
    </div>

</section>
