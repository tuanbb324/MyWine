        });
        $("#UploadImage").change(function () {

            var formData = new FormData();
            formData.append('File', $('#UploadImage')[0].files[0]);

            $.ajax({
                url: '/Admin/File/Upload',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (data) {
                    if (data.statusCode == 1) {
                        $("#Image").val(data.url);
                        $("#imageurl").attr("src", data.url);

                    }
                }
            });
        })
        $("form").submit(function (event) {
            var formData = {
                Id: $("#Id").val(),
                Name: $("#Name").val(),
                Decsription: $("#Decsription").val(),
                Content: tinymce.get("Content").getContent(),
                SeoUrl: $("#SeoUrl").val(),
                Keywords: $("#Keywords").val(),
                Published: $("#Published").is(":checked"),
                Image: $("#Image").val(),
                ArticleCategoryId: $('#ArticleCategoryId').find(":selected").val()
            };
            
            $.ajax({
                type: "POST",
                url: "/Admin/Article/Edit",
                data: formData,
                dataType: "json",
                encode: true,
            }).done(function (data) {
               alert(data.message);
               
                if(data.status>0)
               location.href="/Admin/Article/Index";
            });

            event.preventDefault();
        });
    });</script>