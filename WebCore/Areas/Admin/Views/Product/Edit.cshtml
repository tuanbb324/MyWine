@using Newtonsoft.Json;
@using WebCore.Domain.Catalog;
@model Product
@{
    ViewBag.Menu = "Product";
    var categories = (List<Category>)ViewBag.Categories;
    var cate = Model.Categories.Select(x => x.CategoryId).ToList();

    var stringlist = JsonConvert.SerializeObject(cate);
}
<section class="content-header">
    <h1>
        chỉnh sửa sản phẩm

    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Sản phẩm</li>
    </ol>
</section>
<section class="content">

    <div class="row">
        <form role="form" action="/Admin/Product/Edit">
            <div>
                <div class="col-xs-3">
                    <div class="box box-primary">
                        <div class="box-body">
                            <div class="form-group">
                                <img id="imageurl" src="@Model.Image" style="width: 100%;min-height: 150px;">
                            </div>
                            <div class="form-group">
                                <label for="image">Ảnh đại diện 1</label>
                                <input type="file" id="UploadImage" accept="image/*">
                            </div>
                        </div>
                    </div>

                    <div class="box box-primary">
                        <div class="box-body">
                            <div class="form-group">
                                <img id="imageurl2" src="@Model.Image2" style="width: 100%;min-height: 150px;">
                            </div>
                            <div class="form-group">
                                <label for="image">Ảnh đại diện 2</label>
                                <input type="file" id="UploadImage2" accept="image/*">
                            </div>
                        </div>
                    </div>

                    <div class="box box-primary">
