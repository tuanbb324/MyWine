                            </div>
                            <div class="form-group">
                                <label for="image">Ảnh đại diện 4</label>
                                <input type="file" id="UploadImage4" accept="image/*">
                            </div>
                        </div>
                    </div>

                </div>
                <div class="col-xs-9">
                    <div class="box box-primary">

                        <div class="box-body">
                            <input type="hidden" class="form-control" id="Id" value="@Model.Id">
                            <input type="hidden" class="form-control" id="Image" value="@Model.Image">
                            <input type="hidden" class="form-control" id="Image2" value="@Model.Image2">
                            <input type="hidden" class="form-control" id="Image3" value="@Model.Image3">
                            <input type="hidden" class="form-control" id="Image4" value="@Model.Image4">
                            <div class="form-group">
                                <label>Danh mục</label>
                                <select class="form-control select2" id="CategoryId" required multiple="multiple" data-placeholder="Chọn danh mục"
                                        style="width: 100%;">
                                    @foreach (var item in categories)
                                    {

                                        <option value="@item.Id">@item.Name</option>
                                    }

                                </select>
                            </div>
                            <div class="form-group">
                                <label for="name">Tên sản phẩm</label>
                                <input type="text" class="form-control" id="Name" value="@Model.Name" required placeholder="Tên sản phẩm">
                            </div>

                            <div class="form-group">
                                <label for="Decsription">Mô tả</label>
                                <textarea class="form-control" id="Decsription" placeholder="Mô tả">@Model.Name</textarea>
                            </div>

                            <div class="form-group">
                                <label for="SeoUrl">SeoUrl</label>
                                <input type="text" class="form-control" id="SeoUrl" value="@Model.SeoUrl" placeholder="SeoUrl">
                            </div>



                            <div class="form-group">
                                <label for="MetaKeywords">Keywords</label>
                                <input type="text" class="form-control" id="MetaKeywords" value="@Model.MetaKeywords" placeholder="MetaKeyWord">
                            </div>



                            <div class="form-group">
                                <label for="Note">Ghi chú</label>
                                <textarea class="form-group" id="Note" name="Note" rows="10" cols="80">
                                    @Model.Note
                                </textarea>
                            </div>

                            <div class="form-group">
                                <label for="Enjoy">Thưởng thức</label>
                                <textarea class="form-group" id="Enjoy" name="Enjoy" rows="10" cols="80">
                                    @Model.Enjoy
                                </textarea>
                            </div>
                            <div class="form-group">
                                <label for="BasicInformation">Thông tin cơ bản</label>
                                <textarea class="form-group" id="BasicInformation" name="BasicInformation" rows="10" cols="80">
                                    @Model.BasicInformation
                                </textarea>
                            </div>

                            <div class="form-group">
                                <label for="Content">Nội dung</label>
                                <textarea class="form-group" id="Content" name="Content" rows="10" cols="80">
                                    @Model.Content
                                </textarea>

                            </div>

                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" id="Published" @(Model.Published ? "checked" : "")> Xuất bản
                                </label>
                            </div>

                        </div>
                    </div>
                    <!-- /.box-body -->



                </div>
                <!-- /.box -->
            </div>
            <div class="col-xs-12" style=" text-align: center; ">
                <button type="submit" id="btn-Save" class="btn btn-primary">Lưu</button>
            </div>
        </form>
    </div>

</section>
