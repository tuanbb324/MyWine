@using WebCore.Domain.Catalog;
@model ArticleViewModel
<main id="main" class="">

    <div id="content" class="blog-wrapper blog-archive page-wrapper">
        <header class="archive-page-header">
            <div class="row">
                <div class="large-12 text-center col">
                    <h1 class="page-title is-large uppercase">
                        <span>@Model.ArticleCategory.Name</span>
                    </h1>
                </div>
            </div>
        </header><!-- .page-header -->


        <div class="row row-large ">

            <div class="large-9 col">




                <div class="row large-columns-1 medium-columns- small-columns-1">
                    @foreach (var item in Model.Articles)
                    {
                        <div class="col post-item">
                            <div class="col-inner">
                                <a href="@("/bai-viet/"+item.SeoUrl+"-"+item.Id)" class="plain">
                                    <div class="box box-vertical box-text-bottom box-blog-post has-hover">
                                        <div class="box-image" style="width:35%;">
                                            <div class="image-cover" style="padding-top:56%;">
                                                <img width="300" height="201" src="@item.Image"
                                                     class="attachment-medium size-medium wp-post-image lazy-load-active" 
                                                     alt="138 grande" decoding="async" loading="lazy" 
                                                 sizes="(max-width: 300px) 100vw, 300px" title="@item.Name">
                                            </div>
                                        </div>
                                        <div class="box-text text-left">
                                            <div class="box-text-inner blog-post-inner">


                                                <h5 class="post-title is-large ">@item.Name</h5>
                                                <div class="is-divider"></div>
                                                <p class="from_the_blog_excerpt ">@item.Decsription</p>
                                            </div>
                                        </div>
                                        <div class="badge absolute top post-date badge-square">
                                            <div class="badge-inner">
                                                <span class="post-date-day">@item.DateModified.ToString("D")</span><br>
                                                <span class="post-date-month is-xsmall">@item.DateModified.ToString("MM")</span>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>

                    }

                </div>

            </div>
            <div class="post-sidebar large-3 col">
                <div id="secondary" class="widget-area " role="complementary">
                    <aside id="categories-2" class="widget widget_categories">
                        <span class="widget-title "><span>Danh mục bài viết</span></span><div class="is-divider small"></div>
                        <ul>
                            @foreach (var item in Model.ArticleCategories)
                            {
                                <li class="cat-item cat-item-1 current-cat active">
                                    <a aria-current="page" href="@("/danh-muc-bai-viet/"+item.SeoUrl+"-"+item.Id)">@item.Name</a> (@item.ArticleCount)
                                </li>
                            }

                        </ul>

                    </aside>
                    <aside id="flatsome_recent_posts-2" class="widget flatsome_recent_posts">
                        <span class="widget-title "><span>Bài viết mới cập nhật</span></span><div class="is-divider small"></div>
                        <ul>
                            @foreach (var item in Model.ArticleSuggesion)
                            {
                                <li class="recent-blog-posts-li">
                                    <div class="flex-row recent-blog-posts align-top pt-half pb-half">
                                        <div class="flex-col mr-half">
                                            <div class="badge post-date  badge-square">
                                                <div class="badge-inner bg-fill" style="background: linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.2) ), url(../wp-content/uploads/2019/03/138_grande-150x150.jpg); color:#fff; text-shadow:1px 1px 0px rgba(0,0,0,.5); border:0;">
                                                    <span class="post-date-day">@item.DateModified.Day.ToString()</span><br>
                                                    <span class="post-date-month is-xsmall">@item.DateModified.Month.ToString()</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="flex-col flex-grow">
                                            <a href="@("/bai-viet/"+item.SeoUrl+"-"+item.Id)" title="@item.Name">@item.Name</a>
                                            <span class="post_comments op-7 block is-xsmall">
                                                <a href="@("/bai-viet/"+item.SeoUrl+"-"+item.Id)"></a>
                                            </span>
                                        </div>
                                    </div>
                                </li>
                            }


                        </ul>

                </div>
            </div>
        </div>

    </div>


</main>