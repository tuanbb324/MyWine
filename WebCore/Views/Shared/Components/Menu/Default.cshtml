@using WebCore.Domain.Catalog
@model List<Category>
@{
    var data = Model.Where(x => x.ParentCategoryId == 0).ToList();
}
<div class="flex-col hide-for-medium flex-center">
    <ul class="nav header-nav header-bottom-nav nav-center  nav-size-medium nav-spacing-xlarge nav-uppercase">
        <li id="menu-item-665" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-home current-menu-item page_item page-item-29 current_page_item menu-item-665 active menu-item-design-default">
            <a href="/" aria-current="page" class="nav-top-link">Trang chủ</a>
        </li>
        @for (int i = 0; i < data.Count; i++)
        {

            <li id="menu-item-672" class="menu-item menu-item-type-taxonomy menu-item-object-product_cat menu-item-has-children menu-item-672 menu-item-design-default has-dropdown">
                @{
                    var dataChild = Model.Where(x => x.ParentCategoryId == data[i].Id).ToList();
                    
                }
                @if (dataChild.Count == 0)
                {
                    <a href=@Url.Content($"/danh-muc-san-pham/{data[i].SeoUrl}-{data[i].Id}") class="nav-top-link">
                        @data[i].Name
                       
                    </a>
                }
                else
                {
                    <a href=@Url.Content($"/danh-muc-san-pham/{data[i].SeoUrl}-{data[i].Id}") class="nav-top-link">
                        @data[i].Name
                        <i class="icon-angle-down"></i>
                    </a>
                    <ul class="sub-menu nav-dropdown nav-dropdown-default">
                        @foreach (var cat in dataChild)
                        {
                            <li id="menu-item-2051" class="menu-item menu-item-type-taxonomy menu-item-object-product_cat menu-item-2051">
                            <a href=@Url.Content($"/danh-muc-san-pham/{cat.SeoUrl}-{cat.Id}")>@cat.Name</a>
                            </li>
                        }                     
                    </ul>
                }
              
            </li>
        }

    </ul>
</div>