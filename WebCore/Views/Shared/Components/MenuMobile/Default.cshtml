@using WebCore.Domain.Catalog
@model List<Category>
@{
    var data = Model.Where(x => x.ParentCategoryId == 0).ToList();
}
<ul class="nav nav-sidebar nav-vertical nav-uppercase">

    <li class="menu-item menu-item-type-post_type menu-item-object-page menu-item-home current-menu-item page_item page-item-29 current_page_item menu-item-665">
        <a href="/" aria-current="page">Trang chủ</a>
    </li>
