                    @data[i].Name

                </a>
            }
            else
            {
                <a href=@Url.Content($"/danh-muc-san-pham/{data[i].SeoUrl}-{data[i].Id}")>  @data[i].Name</a>
                <ul class="sub-menu nav-sidebar-ul children">
                    @foreach (var cat in dataChild)
                    {
                        <li class="menu-item menu-item-type-taxonomy menu-item-object-product_cat menu-item-2048">
                            <a href=@Url.Content($"/danh-muc-san-pham/{cat.SeoUrl}-{cat.Id}")>@cat.Name</a>
                        </li>

